<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/def_list_row_selector"
    android:orientation="vertical">

    <!-- Thumbnail Image -->
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="5dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/logId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="8dp"
                    android:drawablePadding="5dp"
                    android:fontFamily="sans-serif-light"
                    android:radius="3dp"
                    android:singleLine="true"
                    android:text="Log ID"
                    android:textColor="@color/black"
                    android:textSize="16dp"
                    android:textStyle="bold" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"
                    android:background="#dadada" />

                <TextView
                    android:id="@+id/logTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Log Time"
                    android:textColor="@color/black"
                    android:textSize="12dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"
                    android:background="#dadada" />

                <TextView
                    android:id="@+id/logAddressHex"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="Log Address Hex"
                    android:textColor="@color/black"
                    android:textSize="12dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"
                    android:background="#dadada" />

                <TextView
                    android:id="@+id/logDataHex"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="Log Data Hex"
                    android:textColor="@color/black"
                    android:textSize="12dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"
                    android:background="#dadada" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <Button
                    android:id="@+id/saveAction"
                    style="@style/ButtonGreen"
                    android:textSize="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_margin="10dp"
                    android:focusable="true"
                    android:text="@string/action_save" />
                <!--
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:background="@drawable/button_gray"
                    android:layout_margin="2dp"
                    android:text="@string/action_clear"
                    android:id="@+id/clearAction" />
                -->
                <Button
                    android:id="@+id/deleteAction"
                    style="@style/ButtonGreen"
                    android:textSize="12dp"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_margin="10dp"
                    android:text="@string/action_delete" />

            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="#dadada" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="Note :"
                android:textColor="@color/black"
                android:textSize="12dp" />

            <EditText
                android:id="@+id/logNote"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_weight="0.96"
                android:gravity="top|left"
                android:text="please add your note here"
                android:textColor="@color/black"
                android:textSize="12dp" />


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="#dadada" />

    </LinearLayout>

    <!-- Person Full name -->

    <!-- Status -->

</LinearLayout>